<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.GameSettingsView">
    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0">
            <image>
                <Image url="@images/pacman_backgound3.jpg"/>
            </image>
        </ImageView>
        <Button onMouseClicked="#selectNewMap" layoutX="74.0" layoutY="96.0" mnemonicParsing="false" prefHeight="42.0"
                prefWidth="112.0" text="Select New Map">
            <font>
                <Font name="Georgia" size="13.0"/>
            </font>
        </Button>
        <Button layoutX="162.0" layoutY="189.0" mnemonicParsing="false" onAction="#decreaseLifeNumber" prefHeight="22.0"
                prefWidth="24.0" text="-">
            <font>
                <Font name="Georgia Bold" size="11.0"/>
            </font>
        </Button>
        <Label layoutX="168.0" layoutY="155.0" text="Life Number" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Georgia" size="17.0"/>
            </font>
        </Label>
        <Button layoutX="245.0" layoutY="189.0" mnemonicParsing="false" onAction="#increaseLifeNumber" prefHeight="22.0"
                prefWidth="9.0" text="+">
            <font>
                <Font name="Georgia Bold" size="11.0"/>
            </font>
        </Button>
        <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#changeSoundStatus"
                prefHeight="32.0" prefWidth="100.0" text="Mute/UnMute"/>
        <Button layoutX="186.0" layoutY="330.0" mnemonicParsing="false" onAction="#back" prefHeight="31.0"
                prefWidth="60.0" text="Back">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Button>
        <Button onAction="#startNewGame" layoutX="173.0" layoutY="240.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="85.0" text="START">
            <font>
                <Font name="Stencil" size="19.0"/>
            </font>
        </Button>
        <Label layoutX="30.0" layoutY="24.0" text="START NEW GAME" textFill="WHITE">
            <font>
                <Font name="Stencil" size="45.0"/>
            </font>
        </Label>
        <Label fx:id="lifeNumber" layoutX="206.0" layoutY="179.0" prefWidth="20.0" text="3" textFill="WHITE">
            <font>
                <Font name="Century Schoolbook Bold" size="34.0"/>
            </font>
        </Label>
        <Button onMouseClicked="#selectMapFromFavourites" layoutX="199.0" layoutY="96.0" mnemonicParsing="false"
                prefHeight="42.0" prefWidth="174.0" text="Select Map From Favorites">
            <font>
                <Font name="Georgia" size="13.0"/>
            </font>
        </Button>
        <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false"
                onMouseClicked="#changeSoundStatus" prefHeight="32.0" prefWidth="100.0" text="Mute/UnMute"/>
    </children>
</AnchorPane>
