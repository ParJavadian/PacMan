<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.RegisterView">
    <ImageView fitHeight="400.0" fitWidth="600.0">
        <Image url="@images/pacman_background4.jpg"/>
    </ImageView>
    <HBox alignment="CENTER" layoutX="200.0" layoutY="51.0"/>
    <HBox alignment="CENTER" layoutX="200.0" layoutY="51.0"/>
    <Label layoutX="117.0" layoutY="14.0" styleClass="title" text="Create Account"
           textFill="WHITE">
        <font>
            <Font name="Stencil" size="20.0"/>
        </font>
    </Label>
    <Button layoutX="166.0" layoutY="332.0" mnemonicParsing="false" onAction="#back" prefHeight="39.0"
            prefWidth="71.0" text="Back">
        <font>
            <Font name="Georgia" size="12.0"/>
        </font>
    </Button>
    <VBox alignment="CENTER" layoutX="101.0" layoutY="58.0" maxWidth="300" prefHeight="193.0" prefWidth="200.0"
          spacing="10" styleClass="p1">
        <Text fill="WHITE" text="Username:">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Text>
        <TextField fx:id="username" prefWidth="200" promptText="username">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </TextField>
        <Text fill="WHITE" text="Password:">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Text>
        <TextField fx:id="password" promptText="password">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </TextField>
        <Text fill="WHITE" text="Confirm Password:">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Text>
        <TextField fx:id="passwordConfirm" promptText="repeat password">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </TextField>
        <Button defaultButton="true" layoutX="260" mnemonicParsing="false" onMouseClicked="#createUser"
                prefHeight="27.0" prefWidth="100" styleClass="button1" text="Sign Up">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Button>
        <Text fill="WHITE" text="Already have an account?">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Text>
        <Button layoutX="260" mnemonicParsing="false" onMouseClicked="#openLoginMenu" prefHeight="27.0"
                prefWidth="100" text="Sign In">
            <font>
                <Font name="Georgia" size="12.0"/>
            </font>
        </Button>
    </VBox>
    <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false"
            onMouseClicked="#changeSoundStatus" prefHeight="32.0" prefWidth="100.0" text="Mute/UnMute"/>
